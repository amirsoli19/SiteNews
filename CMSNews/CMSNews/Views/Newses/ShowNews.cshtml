@model IEnumerable<CMSNews.Models.ViewModels.NewsViewModel>
@{
    ViewBag.Title = "اخبار";
}
<div id="services">
    <div class="jumbotron">
        <div class="area text-center">

        </div>
    </div>
</div>

<div class="container" id="tourpackages-carousel">

    <div class="row">
        @foreach (var item in Model)
        {

        <div class="col-xs-18 col-sm-6 col-md-3">
            <div class="thumbnail border-bottom border-top">
                <img src="~/Images/news/@item.ImageName" style="height: 230px;" alt="@item.NewsTitle" >
                <div class="caption">
                    <h5 style="height:80px;overflow-y: hidden;">@item.NewsTitle</h5>
                    <div style="text-align: justify;height:130px; overflow-y: hidden; padding: 5px;">
                       @Html.Raw(item.Description)
                    </div>
                    <p>
                        <a href="/newses/newsdetails/@item.NewsId" class="btn btn-info btn-block">جزییات خبر</a>
                    </p>
                </div>
            </div>
        </div>
      }
</div>
    </div>
        



